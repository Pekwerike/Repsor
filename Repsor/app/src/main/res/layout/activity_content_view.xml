<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

       <androidx.appcompat.widget.Toolbar
           android:id="@+id/tool_bar"
           app:titleMarginStart="20dp"
           app:subtitleTextColor="@android:color/white"
           app:titleTextColor="@android:color/white"
           android:layout_width="match_parent"
           android:padding="@dimen/standard_view_padding"
           android:layout_height="wrap_content"
           android:background="@color/colorPrimaryDark"
           app:titleTextAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
           app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
           app:logo="@drawable/ic_https_black_24dp"
           app:navigationIcon="@drawable/ic_close_black_24dp"
           app:title="@string/repsorp" />


    <WebView
        android:id="@+id/my_web_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

       <ProgressBar
           android:id="@+id/progress_now"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="clip_horizontal|center|clip_vertical|center_horizontal|center_vertical"
           android:layout_marginTop="250dp" />
   </LinearLayout>
</layout>